<?xml version="1.0" encoding="UTF-8"?>
<faces-config
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd" version="2.0">

    <navigation-rule>
        <from-view-id>*</from-view-id>

        <navigation-case>
            <from-outcome>goToMain</from-outcome>
            <to-view-id>/main.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>goToProfile</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>goToPictures</from-outcome>
            <to-view-id>/pictures.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>goToHistory</from-outcome>
            <to-view-id>/history.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>goToAbout</from-outcome>
            <to-view-id>/about.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>goToContacts</from-outcome>
            <to-view-id>/contacts.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>goToQuestion</from-outcome>
            <to-view-id>question.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>goToInvalidPassword</from-outcome>
            <to-view-id>invalidPassword.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>goToForgotPassword</from-outcome>
            <to-view-id>forgotPassword.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>goToQuestion2</from-outcome>
            <to-view-id>question2.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>goToQuestion1</from-outcome>
            <to-view-id>question1.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>goToQuestion3</from-outcome>
            <to-view-id>question3.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

        <navigation-case>
            <from-outcome>goToAnswers</from-outcome>
            <to-view-id>answers.xhtml</to-view-id>
            <redirect/>
        </navigation-case>

    </navigation-rule>

</faces-config>